<style type="text/css">
		.tree-wrap {
			display:block;
			text-align: left;
			margin: 0px;
		}

		.tree-container {
			padding: 5px;
			width: 755px;
			min-height: 200px;
			border: 1px solid #95b8e7;
			margin: 10px 0 0 0;
		}
</style>

<link rel="stylesheet" href="/stylesheets/component/servision.tree.css" />

<div class="tree-wrap">
	<a id="btnExpandTo" href="javascript:void(0);" class="button">展开指定节点</a>
	<div id="tree-container" class="tree-container" class="button">
	</div>
</div>

<script type="text/javascript" src="/scripts/component/jquery.servision.tree.js"></script>

<script type="text/javascript">
	$(document).ready(function(){
		var $tbcontainer = $('#tree-container');

		var data = [{
			id: 1,
			text: 'node-1',
			children: [{
				id: 2,
				text: 'node-2'
			}, {
				id: 3,
				text: 'node-3',
				children: [{
					id: 4,
					text: 'node-4'
				}, {
					id: 5,
					text: 'node-5'
				}]
			},{
				id: 6,
				text: 'node-6',
				children: [{
					id: 7,
					text: 'node-7'
				}, {
					id: 8,
					text: 'node-8'
				}]
			},{
				id: 9,
				text: 'node-9',
				children: [{
					id: 10,
					text: 'node-10'
				}, {
					id: 11,
					text: 'node-11'
				}]
			}]
		}];

		$tbcontainer.tree({
			data:data
		});

		$('#btnExpandTo').on('click', function(){
			$tbcontainer.tree('expandTo', 5);
			$tbcontainer.tree('selectionNode', 5);
		});
	});
</script>